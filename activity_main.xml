<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.resit.sdgp.bookstore.BookActivity">


    <EditText
        android:id="@+id/AName"
        android:layout_width="239dp"
        android:layout_height="46dp"
        android:ems="10"
        android:hint="your name"
        android:inputType="textPersonName"
        android:text="Name of the author"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textViewBooks" />

    <Spinner
        android:id="@+id/spinnerbooks"
        android:layout_width="241dp"
        android:layout_height="42dp"
        android:layout_marginTop="26dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="84dp"
        android:layout_below="@+id/AName"
        android:layout_alignStart="@+id/textViewBooks" />

    <Button
        android:id="@+id/addAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        tools:layout_editor_absoluteX="73dp"
        tools:layout_editor_absoluteY="146dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/spinnerbooks"
        android:layout_alignStart="@+id/AName" />

    <TextView
        android:id="@+id/textViewBooks"
        android:layout_width="238dp"
        android:layout_height="26dp"
        android:text="Authors"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="217dp"
        android:layout_above="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginBottom="14dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="239dp"
        android:layout_height="36dp"
        android:text="Click on an Author to add and view books"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="249dp"
        android:textAlignment="center"
        android:layout_marginBottom="11dp"
        android:layout_above="@+id/listAuthors"
        android:layout_centerHorizontal="true" />

    <ListView
        android:id="@+id/listAuthors"
        android:layout_width="330dp"
        android:layout_height="206dp"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
